<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotelAg13.Views.ContratacaoHospedagem"
             Title="ContratacaoHospedagem"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Verde}">

    <VerticalStackLayout VerticalOptions="CenterAndExpand" Padding="10">
        <Label 
            Text="CÁLCULO DA DIÁRIA"
            FontFamily="ArsenalSCBold"
            FontSize="50"
            TextColor="{StaticResource Nude}"/>

        <Frame Padding="10"
               BackgroundColor="{StaticResource Nude}">

            <VerticalStackLayout>
                <Grid RowDefinitions="Auto, Auto"
                      ColumnDefinitions="*, *, 2*">

                    <Label Grid.Row="0" Grid.Column="0"
                           Text="Adultos:"
                           TextColor="{StaticResource Verde}"/>

                    <Label Grid.Row="0" Grid.Column="1"
                           TextColor="{StaticResource VerdeMilitar}"
                           Text="{Binding Value}"
                           BindingContext="{x:Reference stp_adultos}"/>

                    <Stepper Grid.Row="0" Grid.Column="2"
                             x:Name="stp_adultos"
                             Minimum="0"
                             Maximum="10"
                             Increment="1" />

                    <Label Grid.Row="1" Grid.Column="0"
                           Text="Crianças:"
                           TextColor="{StaticResource Verde}"/>

                    <Label Grid.Row="1" Grid.Column="1"
                           TextColor="{StaticResource VerdeMilitar}"
                           Text="{Binding Value}"
                           BindingContext="{x:Reference stp_criancas}"/>

                    <Stepper Grid.Row="1" Grid.Column="2"
                             x:Name="stp_criancas"
                             Minimum="0"
                             Maximum="10"
                             Increment="1" />
                </Grid>

                <Label Text="ESCOLHA SUA SUÍTE"
                           FontFamily="OpenSansSemibold"
                           FontSize="18"
                           TextColor="{StaticResource VerdeClr}"
                           VerticalOptions="Center"
                           HorizontalOptions="Center" />

                <Picker x:Name="pck_quarto"
                            Title="Selecione sua Acomodação"
                            Margin="5" />

                <Frame Padding="10"
                       Margin="10"
                       BackgroundColor="{StaticResource Nude}">
                    <VerticalStackLayout>
                        <Label Text="PERÍODO DE ESTADIA"
                               FontFamily="OpenSansSemibold"
                               FontSize="18"
                               TextColor="{StaticResource VerdeClr}"
                               VerticalOptions="Center"
                               HorizontalOptions="Center"/>

                        <HorizontalStackLayout HorizontalOptions="Center">
                            <Label Text="Check-in:"
                                   TextColor="{StaticResource Verde}"
                                   VerticalOptions="Center" />

                            <DatePicker x:Name="dtpck_checkin"
                                        Format="dd/MM/yyyy"
                                        Margin="5"
                                        TextColor="{StaticResource VerdeMilitar}"/>
                        </HorizontalStackLayout>

                        <HorizontalStackLayout HorizontalOptions="Center">
                            <Label Text="Check-out:"
                                   TextColor="{StaticResource Verde}"
                                   VerticalOptions="Center" />

                            <DatePicker x:Name="dtpck_checkout"
                                        Format="dd/MM/yyyy"
                                        Margin="5"
                                        TextColor="{StaticResource VerdeMilitar}"/>
                        </HorizontalStackLayout>

                    </VerticalStackLayout>
                </Frame>

                <Button Text="Avançar"
                        FontFamily="OpenSansSemibold"
                        TextColor="{StaticResource Nude}"
                        Padding="10"
                        Margin="10" 
                        BackgroundColor="{StaticResource VerdeClr}" />

                <Button Clicked="Button_Clicked_1"
                        Text="Sobre" 
                        TextColor="{StaticResource Nude}"
                        FontFamily="OpenSansSemibold"
                        Padding="10"
                        Margin="10"
                        BackgroundColor="{StaticResource VerdeClr}" />

            </VerticalStackLayout>

        </Frame>

    </VerticalStackLayout>

</ContentPage>