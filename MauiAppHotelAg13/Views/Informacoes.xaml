<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppHotelAg13.Views.Informacoes"
             Title="Informacoes"
             NavigationPage.HasNavigationBar="False"
             BackgroundColor="{StaticResource Verde}">

    <VerticalStackLayout VerticalOptions="CenterAndExpand" Padding="10">

        <Label Text="INFORMAÇÕES DO APLICATIVO"
               FontFamily="ArsenalSCBold"
               FontSize="35"
               TextColor="{StaticResource Nude}"
               Margin="10"
               HorizontalOptions="Center"/>

        <Frame BackgroundColor="{StaticResource Nude}">

            <VerticalStackLayout>

                <HorizontalStackLayout>
                    <Label Text="Desenvolvido por: Beatriz Gotardo de Souza"
                           FontSize="18"
                           TextColor="{StaticResource VerdeMilitar}"
                           Margin="10" />
                </HorizontalStackLayout>

                <HorizontalStackLayout>
                    <Label Text="Ano de desenvolvimento: 2025"
                           FontSize="18"
                           TextColor="{StaticResource VerdeMilitar}"
                           Margin="10" />
                </HorizontalStackLayout>

                <Button Text="Voltar"
                        Clicked="Button_Clicked"
                        TextColor="{StaticResource Nude}"
                        FontFamily="OpenSansSemibold"
                        Padding="10"
                        Margin="10"
                        BackgroundColor="{StaticResource VerdeClr}"/>
            </VerticalStackLayout>

        </Frame>

    </VerticalStackLayout>

</ContentPage>